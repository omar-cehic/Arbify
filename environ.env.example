# Environment Configuration Template
# Copy this file to environ.env and fill in your actual values
# NEVER commit environ.env to version control!

# Security - GENERATE NEW KEYS!
# Run: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secure-secret-key-here

# Database Encryption (CRITICAL FOR PRODUCTION)
# Run: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
DB_ENCRYPTION_KEY=your-db-encryption-key-here

# Session Security
# Run: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
SESSION_ENCRYPTION_KEY=your-session-encryption-key-here

# Backup Encryption (Optional but recommended)
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key-here

# Database
DATABASE_URL=sqlite:///./arbitrage.db

# API Keys
ODDS_API_KEY=your_odds_api_key_here
SGO_API_KEY=beabe2dd7d51d5425f87eab97fbca604

# Email Configuration (Resend)
RESEND_API_KEY=your_resend_api_key_here
EMAIL_FROM=noreply@yourdomain.com

# Error Tracking (Sentry)
SENTRY_DSN=your_sentry_dsn_here

# Base URL
BASE_URL=http://localhost:8001

# Stripe Configuration (Use test keys for development)
STRIPE_PUBLISHABLE_KEY=pk_test_your_test_key_here
STRIPE_SECRET_KEY=sk_test_your_test_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Environment
ENVIRONMENT=development
FRONTEND_URL=http://localhost:5173

# CORS Configuration (only for development - set to "false" in production)
CORS_ALLOW_ALL=true

# Redis Configuration (for production rate limiting and sessions)
REDIS_URL=redis://localhost:6379/0

# SSL Configuration (production only)
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem